# Function to find the nth Fibonacci number
def fibonacci(n):
    if n <= 0:
        return "Invalid input. Please enter a positive integer."
    elif n == 1:
        return 0
    elif n == 2:
        return 1
    else:
        a, b = 0, 1
        for i in range(2, n):
            a, b = b, a + b
        return b

# Get user input
n = int(input("Enter which Fibonacci number you want (n): "))

# Display the result
print(f"The {n}th Fibonacci number is:", fibonacci(n))
